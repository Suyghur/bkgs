<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21">

        <TextView
            android:id="@+id/topTipsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"

            android:text="设置模式密码"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/forgetPwdTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="忘记密码"
            android:textColor="@color/c_8e1d77"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:text="请设置青少年模式开启/关闭密码，该密码用于关闭或
开启青少年模式，请谨记密码"
        android:textColor="@color/c_95928e"
        android:textSize="@dimen/sp_14" />

    <com.pro.maluli.common.view.myselfView.VerifyEditText
        android:id="@+id/verifyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:inputType="number"
        app:totalCount="4" />
</LinearLayout>