<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/actFinishImg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_close_x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_21"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信登录"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/helpTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:text="帮助"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <EditText
        android:id="@+id/inputMobileEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_f9f9f9_30"
        android:hint="请输入手机号码"
        android:paddingLeft="@dimen/dp_20"
        android:text=""
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/submitMobileTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/selector_input_success_btn"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@drawable/selector_color_btn_textcolor"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/pwdLoginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_3"
        android:text="密码登录"
        android:textColor="@color/c_8e1d77"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/successImg"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:background="@drawable/selector_check" />

        <TextView
            android:id="@+id/xieyiTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_3"
            android:text="已阅读并同意《xxxx协议》"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_dcdcdc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:text="其他登录方式"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_dcdcdc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/loginQQLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:src="@mipmap/ic_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textColor="@color/c_a6a6a6"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/loginWechatLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_63"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:src="@mipmap/ic_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textColor="@color/c_a6a6a6"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>