<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarCiv"
                android:layout_width="@dimen/dp_97"
                android:layout_height="@dimen/dp_97"
                android:src="@color/mainlan" />

            <ImageView
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ic_carmer" />
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/userIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:background="@drawable/shape_ffa743_32_stroke"
            android:paddingHorizontal="@dimen/dp_7"
            android:paddingVertical="@dimen/dp_1"
            android:text="---"
            android:textColor="@color/c_ffa743"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_7"
            android:background="@color/c_efefef" />

        <TextView
            android:id="@+id/gotoLoginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/shape_b23299_d23db3_10"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_5"
            android:text="注册/登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/c_6A6368"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/inputUserNameEt"
            android:paddingLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入昵称"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@null"
            android:textColor="@color/c_342C33"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/c_dcdcdc" />
    <LinearLayout

        android:paddingHorizontal="@dimen/dp_15"
        android:id="@+id/selectGenderLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/c_6A6368"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/genderTv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男"
            android:textColor="@color/c_6A6368"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ic_right" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/c_dcdcdc" />
</LinearLayout>