<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_main_onetomore_bg"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_height="match_parent"

        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_46"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/finishIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ic_whilt_left_back" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginHorizontal="@dimen/dp_60"
                android:background="@drawable/shape_ffffff_10">

                <LinearLayout
                    android:id="@+id/subImgLiveBgLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_83"
                        android:layout_height="@dimen/dp_83"
                        android:src="@mipmap/ic_add_live_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="点击上传直播间封面"
                        android:textColor="@color/c_958f94"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/livebgRiv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="@dimen/dp_10" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_ffffff_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_15"
                android:text="一对一直播设置"
                android:textColor="@color/c_6a6368"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_f9f9f9_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputLiveTitleEt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入主播间标题"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/inputMaxTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_marginRight="@dimen/dp_10"
                    android:text="0/15"
                    android:textColor="@color/c_958f94"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/xieyiTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_15"
                android:text="开启直播则默认同意《xxxx协议》"
                android:textColor="@color/c_958f94"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/startLiveTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/shape_b23299_d23db3_34"
                android:gravity="center"
                android:text="开启直播间"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>