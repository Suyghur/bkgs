<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:paddingVertical="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_f9f9f9"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15">


                <TextView
                    android:id="@+id/shenheStatusTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="请先进行主播认证"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/AuditContentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未通过主播申请审核用户不可进行直播"
                    android:textColor="@color/c_6a6368"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectClassLL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_15">


                <TextView
                    android:id="@+id/classificationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="请选择分类"
                    android:textColor="@color/c_6A6368"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/ic_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/c_dcdcdc" />

            <EditText
                android:id="@+id/inputTrueNameEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入真实姓名"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColorHint="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/c_dcdcdc" />

            <EditText
                android:id="@+id/inputNumberEt"
                android:layout_width="match_parent"

                android:layout_height="@dimen/dp_48"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColorHint="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/c_dcdcdc" />

            <EditText
                android:id="@+id/inputCarEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入身份证号"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_15"
                android:textColorHint="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7"
                android:background="@color/c_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="申请主播个人专业说明"
                android:textColor="@color/c_342C33"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_117"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_f9f9f9_6">

                <EditText
                    android:id="@+id/personTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:hint="请输入说明"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_13"
                    android:textColorHint="@color/c_6a6368"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/inputMaxTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:text="0/200"
                    android:textColor="@color/c_958f94"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="身份证正面"
                android:textColor="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/idCarZmRl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_193"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_f9f9f9_6">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="@dimen/dp_123"
                    android:layout_height="@dimen/dp_84"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_idcar_zm" />

                <ImageView
                    android:id="@+id/idCarZmIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="身份证反面"
                android:textColor="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/idCarFmRl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_193"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_f9f9f9_6">

                <ImageView
                    android:layout_width="@dimen/dp_123"
                    android:layout_height="@dimen/dp_84"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_idcar_fm" />

                <ImageView
                    android:id="@+id/idCarFmIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="手持身份证"
                android:textColor="@color/c_6a6368"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/shouchiRl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_193"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/shape_f9f9f9_6">

                <ImageView
                    android:layout_width="@dimen/dp_164"
                    android:layout_height="@dimen/dp_164"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_add_img" />

                <ImageView
                    android:id="@+id/shouchiImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7"
                android:background="@color/c_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_23"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:text="相关专业证书证明"
                android:textColor="@color/c_342C33"
                android:textSize="@dimen/sp_16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectImgRv"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/checkImg"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@drawable/selector_check" />

                <TextView
                    android:id="@+id/yinshiTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="已阅读并同意《xxxx协议》"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/submitTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginBottom="@dimen/dp_130"
                android:background="@drawable/shape_b23299_d23db3_34"
                android:gravity="center"
                android:text="提交申请"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>