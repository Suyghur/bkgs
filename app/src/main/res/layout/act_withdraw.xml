<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f9f9f9"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarWithdrawCiv"
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_42"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_7" />

                    <TextView
                        android:id="@+id/wdUsrrNamtTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/avatarWithdrawCiv"
                        android:text="法外狂徒张三小号"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/canWithdrawTipsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wdUsrrNamtTv"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_toRightOf="@id/avatarWithdrawCiv"
                        android:text="可提现金额："
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/canWithdrawTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wdUsrrNamtTv"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_toRightOf="@id/canWithdrawTipsTv"
                        android:text="1212"
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:background="@color/c_dcdcdc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_alipay_logo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="提现至支付宝"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/alipayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_ffffff_10"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="提现数额"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputWithdrawTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/shape_f9f9f9_30"
                        android:hint="请输入提现数额"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/allWithDrawTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="全部提现"
                        android:textColor="@color/c_1a456d"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/c_dcdcdc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="手机验证"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/shape_f9f9f9_30"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_15">

                    <EditText
                        android:id="@+id/mobileEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入手机验证码"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/c_dcdcdc" />

                    <TextView
                        android:id="@+id/getCodeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/c_8e1d77"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/subTiXianTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@drawable/shape_b23299_d23db3_34"
                    android:gravity="center"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_ffffff_10"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现数额"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="1.金额超过1000元由后台人工审核"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="2.主播一天只能提现一次"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="3.提现第三方手续费"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>