<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/myselfSrl"
    android:background="@color/c_f9f9f9"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mine_mian_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_ffffff_10"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_23">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarCiv"
                    android:layout_width="@dimen/dp_97"
                    android:layout_height="@dimen/dp_97"
                    android:layout_marginTop="@dimen/dp_23"
                    android:src="@mipmap/ic_moren_head" />

                <LinearLayout
                    android:id="@+id/topLinear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/userNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大帅逼"
                        android:textColor="@color/c_342C33"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/genderImg"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:src="@drawable/selector_gender"
                         />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topLinear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/userIdTips"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="@color/c_95928e"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:id="@+id/userIdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/c_95928e"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/levelImg"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_13"
                        android:text="男"
                        android:textColor="#1a456d"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topLinear3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fansListLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_3"
                            android:text="粉丝"
                            android:textColor="@color/c_95928e"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/fansTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/c_342C33"
                            android:textSize="@dimen/sp_22" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/watchListLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_3"
                            android:text="关注"
                            android:textColor="@color/c_95928e"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/subscriptionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/c_342C33"
                            android:textSize="@dimen/sp_22" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/gotoLoginTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/shape_b23299_d23db3_10"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="注册/登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_ffffff_10"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_14">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center"
                    android:text="更多功能"

                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/c_dcdcdc" />

                <LinearLayout
                    android:id="@+id/anchorLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/ic_mine_anchor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="主播信息"
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/dp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/c_dcdcdc" />

                <LinearLayout
                    android:id="@+id/myNemberLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/ic_mine_nember" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的账户"
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/dp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/c_dcdcdc" />

                <LinearLayout
                    android:id="@+id/settingLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/ic_mine_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置"
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/dp_14" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/hasMessageImg"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_yuan_fc595e" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/c_dcdcdc" />

                <LinearLayout
                    android:id="@+id/userXyLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/ic_mine_user_xy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="用户协议"
                        android:textColor="@color/c_6A6368"
                        android:textSize="@dimen/dp_14" />


                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>