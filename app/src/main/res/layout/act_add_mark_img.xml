<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/pictureRiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_108"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/dp_12">

    </com.makeramen.roundedimageview.RoundedImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="#f9f9f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_15">

        <ImageView
            android:id="@+id/addMarkIv"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:background="@drawable/selector_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_3"
            android:text="添加水印"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/submitTv"
            android:layout_width="@dimen/dp_89"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/shape_b23299_d23db3_34"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>