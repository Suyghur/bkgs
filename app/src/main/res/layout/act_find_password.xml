<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:text="设置密码"
        android:textColor="@color/c_000000"
        android:textSize="@dimen/sp_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_f9f9f9_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputPwdEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/checkPwdImg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/selector_psw_iscan_see" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_f9f9f9_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputRePwdEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/reCheckPwdImg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/selector_psw_iscan_see" />
    </LinearLayout>

    <TextView
        android:id="@+id/submitPwdTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/selector_input_success_btn"
        android:gravity="center"
        android:text="确认"
        android:textColor="@drawable/selector_color_btn_textcolor"
        android:textSize="@dimen/dp_16" />
</LinearLayout>