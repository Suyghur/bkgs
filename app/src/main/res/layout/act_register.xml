<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <include layout="@layout/top_titlebar_layout" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:text="注册"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/sp_28" />

        <EditText
            android:id="@+id/inputMobileEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_f9f9f9_30"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_20"
            android:text=""
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/submitMobileTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/selector_input_success_btn"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@drawable/selector_color_btn_textcolor"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/successImg"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/selector_check" />

            <TextView
                android:id="@+id/registerXyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_3"
                android:text=""
                android:textColor="@color/c_999999"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>