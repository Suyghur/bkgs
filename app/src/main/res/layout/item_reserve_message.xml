<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shape_ffffff_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/systemTopLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:gravity="center">

            <ImageView
                android:id="@+id/watchCiv"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_yy_msg" />

            <View
                android:id="@+id/isSeeView"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_yuan_fc595e" />
        </RelativeLayout>


        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="时间萨达"
            android:textColor="@color/c_342C33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="时间萨达"
            android:textColor="@color/c_958f94"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/systemTopLl"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatarCiv"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间萨达"
            android:textColor="@color/c_342C33"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <ImageView
        android:id="@+id/topIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_system_top_bg" />

</RelativeLayout>