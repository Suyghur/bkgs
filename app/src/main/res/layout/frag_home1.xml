<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smarRef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:srlEnableLoadMore="true"
    app:srlEnableRefresh="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mine_mian_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_5">

                        <LinearLayout
                            android:id="@+id/searchLL"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_32"
                            android:layout_weight="1"
                            android:background="@drawable/shape_8e1d77_32_1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dp_10">

                            <ImageView
                                android:id="@+id/iv"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_122"
                                android:src="@mipmap/ic_search" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:singleLine="true"
                                android:text="主播昵称，ID号，直播间标题，标签，分类"
                                android:textColor="@color/c_b1b1b1"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/exitTeenagerTv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_32"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/shape_8e1d77_32"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:text="退出模式"
                            android:textColor="@color/c_ffffff"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/gotoLiveIv"
                            android:layout_width="@dimen/dp_55"
                            android:layout_height="@dimen/dp_32"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@mipmap/ic_home_right"
                            android:visibility="visible" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_170">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_170"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp" />

                        <LinearLayout
                            android:id="@+id/pointLL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公告"
                            android:textColor="@color/c_8e1d77"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:background="@color/c_dbdbdb" />

                        <com.xj.marqueeview.MarqueeView
                            android:id="@+id/marqueeView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mvAnimDuration="500"
                            app:mvDirection="top_to_bottom"
                            app:mvInterval="3000">

                        </com.xj.marqueeview.MarqueeView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.flyco.tablayout.SlidingTabLayout
                            android:id="@+id/homeTpStl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_44"

                            android:layout_weight="1"
                            android:background="@color/white"
                            app:layout_scrollFlags="scroll|exitUntilCollapsed"
                            app:tl_indicator_color="@color/c_8e1d77"
                            app:tl_indicator_corner_radius="@dimen/dp_4"
                            app:tl_indicator_height="@dimen/dp_2"
                            app:tl_indicator_width="@dimen/dp_25"
                            app:tl_tab_space_equal="false"
                            app:tl_textSelectColor="@color/c_8e1d77"
                            app:tl_textUnselectColor="@color/c_94959B"
                            app:tl_textsize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/classificationIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/ic_fenlei_home" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_f9f9f9"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.pro.maluli.common.view.myselfView.CustomViewpager
                    android:id="@+id/homeViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>

