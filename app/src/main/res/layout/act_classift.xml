<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <LinearLayout
        android:id="@+id/linear_classifycategory_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f9f9f9"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_category_list"
            android:layout_width="@dimen/dp_111"
            android:layout_height="match_parent"
            android:background="@color/c_f9f9f9"
            android:scrollbars="none" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_chlid_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ffffff"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>