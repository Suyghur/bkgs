<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_ffffff_10"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/dp_217"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="客服联系方式"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/dismissImg"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@mipmap/ic_close_x"
                android:padding="@dimen/dp_65" />
        </RelativeLayout>

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="欢迎使用百科高手，百科高手服务中心\n随时给您提供帮助。
\n遇到什么问题，联系我们："
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:text="BKGS_help@163.com"
            android:textColor="#FF27A9FF"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/copyTv"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_b23299_d23db3_34"
            android:gravity="center"
            android:text="复制联系方式"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>