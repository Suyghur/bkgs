<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/topClickRl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_298"
        android:background="@drawable/shape_292728_top10">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_above="@id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15" />

        <LinearLayout
            android:layout_above="@id/viewLine"
            android:id="@+id/ll_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_above="@+id/bottomLL"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:background="#30ffffff" />

        <LinearLayout
            android:id="@+id/bottomLL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/ic_bk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="1543"
                android:textColor="@color/c_ebebeb"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/gotRechargeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="充值"
                android:textColor="#FFFFA743"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/ic_right_whilt" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>