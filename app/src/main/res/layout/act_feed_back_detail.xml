<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <include layout="@layout/top_titlebar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/noReptLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:text="反馈回复"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_16" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/replyXrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/c_efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="反馈历史"
                    android:textColor="@color/c_342C33"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/feedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_fefefe_10_dfdfdf"
                    android:padding="@dimen/dp_10"
                    android:text="回复内容回复内容回复内容回复内容回复内容回复内
容回复内容回复内容回复内容回复内容回复内容回复
内容回复内容回复内容回复内容回复内容回复内容回
复内容回复内容回复内容回复内容回复内容"
                    android:textColor="@color/c_958f94"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedXrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15" />

            <TextView
                android:id="@+id/msgTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="联系方式：手机"
                android:textColor="@color/c_958f94"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/msgNumberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="联系账号2021年7月21日15:22:04"
                android:textColor="@color/c_958f94"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/subTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="回复日期：2021年7月21日15:22:04"
                android:textColor="@color/c_958f94"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>