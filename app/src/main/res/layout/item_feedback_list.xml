<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemfeedbackLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shape_ffffff_10"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="反馈内容反馈内容反馈内容反馈内容反馈内容反馈内
容反馈内容反馈内容反馈内容反馈内容反馈内容...."
        android:textColor="@color/c_342C33"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="反馈内"
            android:textColor="@color/c_958f94"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/feedTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="反馈内"
            android:textColor="@color/c_958f94"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/statusIv"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_yuan_fc595e" />

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="已回复"
            android:textColor="@color/c_958f94"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>