<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_10"
    android:gravity="center"

    android:orientation="vertical"
  >

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_98"
        android:layout_height="@dimen/dp_147">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/anchorListRiv"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_147"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_add_img"
            app:riv_corner_radius="@dimen/dp_12" />

        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_delete_img" />
    </RelativeLayout>

</LinearLayout>