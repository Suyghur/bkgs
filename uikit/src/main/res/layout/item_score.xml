<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/giftImg"
            android:layout_width="@dimen/dp_size_26"
            android:layout_height="@dimen/dp_size_26"
            android:visibility="gone"></ImageView>

        <TextView

            android:id="@+id/contentGiftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_size_5"
            android:autoLink="phone|email|web"
            android:gravity="center_vertical|left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="3dip"
            android:maxWidth="@dimen/max_text_bubble_width"
            android:textColor="@color/color_black_b3000000"
            android:textSize="16sp" />


    </LinearLayout>
</FrameLayout>