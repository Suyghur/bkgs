<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_size_30"
    android:layout_marginRight="@dimen/dp_size_30"
    android:background="@drawable/shape_ffffff_10"
    android:gravity="center_horizontal"
    android:minHeight="161dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="主播评分"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:id="@+id/dismissLL"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_size_13"
                android:layout_height="@dimen/dp_size_13"

                android:layout_marginRight="@dimen/dp_size_20"
                android:background="@drawable/ic_close_x"
                android:padding="@dimen/dp_size_65" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_15"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="专业能力"
            android:textColor="#342C33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/abilityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="非常满意"
            android:textColor="#ffa743"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.netease.nim.uikit.business.session.activity.my.view.StarBar
        android:id="@+id/abilityStar"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_15"
        app:starCount="5"
        app:starDistance="@dimen/dp_size_30"
        app:starEmpty="@drawable/ic_star_no"
        app:starFill="@drawable/ic_star_yes"
        app:starSize="@dimen/dp_size_32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_30"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务质量"
            android:textColor="#342C33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/serviceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="非常满意"
            android:textColor="#ffa743"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.netease.nim.uikit.business.session.activity.my.view.StarBar
        android:id="@+id/serviceStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:layout_marginTop="@dimen/dp_size_15"
        app:starCount="5"
        app:starDistance="@dimen/dp_size_30"
        app:starEmpty="@drawable/ic_star_no"
        app:starFill="@drawable/ic_star_yes"
        app:starSize="@dimen/dp_size_32" />

    <TextView
        android:id="@+id/comfirmTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_38"
        android:layout_marginHorizontal="@dimen/dp_size_15"
        android:layout_marginTop="@dimen/dp_size_25"
        android:background="@drawable/shape_20000000_32"
        android:gravity="center"
        android:text="确认评分"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_size_15"
        android:layout_marginTop="@dimen/dp_size_15"
        android:layout_marginBottom="@dimen/dp_size_20"
        android:text="该评价为匿名评价，主播评价将在次日显示统计结果"
        android:textColor="#958f94"
        android:textSize="@dimen/sp_14" />
</LinearLayout>